            <img src="" style="width: 100px;" id="prodimage3">
            <div class="input-section">
                <label>Image 3</label>
                <input type="file" name="image" onchange="viewImage(event, 'image3')"   >
            </div>
            <input type="submit" value="Add">
        </form>
