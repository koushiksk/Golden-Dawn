  <div class="search" style="display: none;">
    <form action="/admin/search" method="GET">
      <div class="input">
        <input
          type="text"
          name="query"
          placeholder="Serach.."
          value="{{query}}"
          required
        />
        <button type="submit">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>
  </div>
